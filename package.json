{
    "name": "aicmt",
    "version": "1.0.0",
    "description": "AI-powered CLI that transforms staged changes into high-quality Conventional Commits and PR descriptions",
    "author": "Abdul Khaliq Abdul Azeez",
    "license": "MIT",
    "type": "module",
    "main": "dist/index.js",
    "bin": {
        "aicmt": "./bin/run.js"
    },
    "files": [
        "/bin",
        "/dist",
        "/templates"
    ],
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "test": "jest",
        "lint": "eslint src/**/*.ts",
        "format": "prettier --write \"src/**/*.ts\"",
        "prepare": "npm run build"
    },
    "dependencies": {
        "@oclif/core": "^3.0.0",
        "openai": "^4.20.0",
        "js-yaml": "^4.1.0"
    },
    "devDependencies": {
        "@types/jest": "^29.5.0",
        "@types/node": "^20.0.0",
        "@types/js-yaml": "^4.0.9",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "eslint": "^8.50.0",
        "eslint-config-prettier": "^9.0.0",
        "jest": "^29.7.0",
        "prettier": "^3.0.0",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.0",
        "typescript": "^5.2.0"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "keywords": [
        "git",
        "commit",
        "conventional-commits",
        "ai",
        "openai",
        "cli",
        "pr",
        "pull-request"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/AbdulKhaliqAbdulAzeez/Repo-Aware-Commit-Composer.git"
    },
    "bugs": {
        "url": "https://github.com/AbdulKhaliqAbdulAzeez/Repo-Aware-Commit-Composer/issues"
    },
    "oclif": {
        "bin": "aicmt",
        "dirname": "aicmt",
        "commands": "./dist/commands",
        "topicSeparator": " "
    }
}